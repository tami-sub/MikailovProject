<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextInputLayout">
        <item name="boxStrokeColor">@color/textColorGray</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="TextInputLayoutError">
        <item name="android:lineSpacingExtra">0.4sp</item>
    </style>

    <style name="DefaultStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">18sp</item>
        <item name="fontStyle">normal</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTintMode">@color/yellow_500</item>
        <item name="rippleColor">@color/yellow_500</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ItemTextView" parent="DefaultStyle">
        <item name="android:textSize">20sp</item>
    </style>
</resources>